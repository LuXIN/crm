{% extends "layout.html.twig" %}
{% block content %}
    <h1>Editer le contact</h1>
    <div>
        {{ form_start(form, {'attr' : {'method' : 'post'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button class="btn btn-primary" type="submit">Valider</button>
        {{ form_end(form) }}
    </div>

    {% if addresses|length > 0 %}

        <h2>Editer les adresses</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Num√©ro de la rue</th>
                <th>Nom de la rue</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for address in addresses %}
                <tr>
                    <td>{{ address.streetNumber|e }}</td>
                    <td>{{ address.streetName|e }}</td>
                    <td>{{ address.zipcode|e }}</td>
                    <td>{{ address.city|e }}</td>
                    <td><a href="{{ path('address_edit', {'id': address.id}) }}">modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <div>
        <h1>Ajouter une adresse</h1>
        <a href="{{ path('address_add', {'id': contact.id}) }}">Ajouter une addresse</a>
    </div>
{% endblock content %}

