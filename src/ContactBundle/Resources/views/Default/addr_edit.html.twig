{% extends "layout.html.twig" %}
{% block content %}
    <h1>Editer une adresse</h1>
    <div>
        {{ form_start(form, {'attr' : {'method' : 'post'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.streetNumber) }}
            {{ form_widget(form.streetNumber, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.streetName) }}
            {{ form_widget(form.streetName, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.zipcode) }}
            {{ form_widget(form.zipcode, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.city) }}
            {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button class="btn btn-primary" type="submit">Valider</button>
        {{ form_end(form) }}
    </div>
{% endblock content %}